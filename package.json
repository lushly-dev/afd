{
	"name": "afd",
	"version": "0.1.0",
	"private": true,
	"description": "Agent-First Development - Build software where AI agents are first-class users",
	"repository": {
		"type": "git",
		"url": "https://github.com/lushly-dev/afd.git"
	},
	"author": "Falkicon",
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": ">=20.0.0",
		"pnpm": ">=9.0.0"
	},
	"packageManager": "pnpm@10.30.1",
	"scripts": {
		"build": "pnpm -r build",
		"clean": "pnpm -r clean && rimraf node_modules",
		"dev": "pnpm -r --parallel dev",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"test": "pnpm -r test",
		"test:coverage": "pnpm -r --no-bail test -- --coverage",
		"test:watch": "pnpm -r --parallel test:watch",
		"typecheck": "pnpm -r typecheck",
		"prepare": "pnpm build"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.3",
		"@types/node": "^25.3.0",
		"rimraf": "^6.1.3",
		"typescript": "^5.9.3",
		"@vitest/coverage-v8": "^4.0.18",
		"vitest": "^4.0.18"
	}
}
