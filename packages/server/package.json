{
	"name": "@lushly-dev/afd-server",
	"version": "0.1.1",
	"description": "Server-side utilities for building AFD-compliant MCP servers with Zod validation",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"README.md"
	],
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "vitest run",
		"test:watch": "vitest",
		"clean": "rm -rf dist"
	},
	"dependencies": {
		"@lushly-dev/afd-core": "workspace:*",
		"@modelcontextprotocol/sdk": "^1.24.0",
		"zod": "^3.23.8",
		"zod-to-json-schema": "^3.23.5"
	},
	"devDependencies": {
		"@lushly-dev/afd-client": "workspace:*",
		"typescript": "^5.4.0",
		"vitest": "^1.6.0"
	},
	"keywords": [
		"afd",
		"agent-first",
		"mcp",
		"server",
		"zod",
		"validation"
	],
	"author": "Falkicon",
	"license": "MIT",
	"homepage": "https://github.com/lushly-dev/afd#readme",
	"bugs": {
		"url": "https://github.com/lushly-dev/afd/issues"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/lushly-dev/afd.git",
		"directory": "packages/server"
	},
	"engines": {
		"node": ">=20.0.0"
	},
	"sideEffects": false,
	"publishConfig": {
		"access": "public"
	}
}
