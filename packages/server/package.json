{
  "name": "@lushly-dev/afd-server",
  "version": "0.1.0",
  "description": "Server-side utilities for building AFD-compliant MCP servers with Zod validation",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@lushly-dev/afd-core": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.24.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "typescript": "^5.4.0",
    "vitest": "^1.6.0"
  },
  "keywords": [
    "afd",
    "agent-first",
    "mcp",
    "server",
    "zod",
    "validation"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}
