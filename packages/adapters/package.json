{
  "name": "@lushly-dev/afd-adapters",
  "version": "0.1.0",
  "description": "Frontend adapters for rendering AFD CommandResult to styled HTML",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./css": "./css/afd-theme.css"
  },
  "files": [
    "dist",
    "css"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check src/",
    "format": "biome format --write src/"
  },
  "dependencies": {},
  "devDependencies": {
    "@lushly-dev/afd-core": "workspace:*",
    "typescript": "^5.3.0",
    "vitest": "^1.6.0"
  },
  "peerDependencies": {
    "@lushly-dev/afd-core": ">=0.1.0"
  },
  "keywords": [
    "afd",
    "adapters",
    "frontend",
    "rendering",
    "command-result"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lushly-dev/afd.git",
    "directory": "packages/adapters"
  },
  "publishConfig": {
    "access": "public"
  }
}
